<div class="items">
  <div class="index">
    <% @days.each do |day| %>
     <div class="card"> <%= link_to day_path(day) do %>
        <div class="first_line">
          <p class="indextext">
            <%= day.title %> -
            <%= day.address %></p>
           <p class="date"><%= day.date %></p>
          <%= link_to '<i class="fas fa-times"></i>'.html_safe, day_path(day), method: :delete, data: {confirm: "Are you sure?"}, class: "x" %> </div>
        <% Booking.joins(:day).where(day: @day).each do |booking| %>
        <p> <%= booking.activity.name %></p>
        <% end %>
        <div> <%= link_to "Edit", edit_day_path(day), class: "btn-pink" %>
        </div>
      <% end %></div>
    <% end %>
    <%= link_to "Create", new_day_path, class: "btn-pink" %>
  </div>

  <div class="weather">
    <form action="" id="location" style="width:220px; margin:0 auto;">
      <input type="text" name="content" id="city" class="form-control" placeholder="Type the city..">
      <input type="submit" value="Send" class="btn-pink my-1">
    </form>
    <div class="weather-info" style="width:220px; margin:0 auto;">
      <div>
        <h1 id="header1"> </h1>
        <h4 id="header4"></h4>
        <p id="parag"></p>
        <p id="feelslike"></p>
      </div>
      <div>
        <img id='image'>
      </div>
    </div>

    <div class="map">
      <form action="" id="location" style="width: 220px; margin:0 auto;">
        <input type="text" name="content" id="address" class="form-control" placeholder="Type the city..">
        <input type="submit" value="Send" class="btn btn-pink my-1">
      </form>

      <div id="results">
        <ul class="list-unstyled">
        </ul>
      </div>

       <div id="map" style="width: 200px; margin:0 auto;"></div>
    </div>
  </div>
  <div class="activities">
    <img src="https://images.unsplash.com/photo-1506126613408-eca07ce68773?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=862&q=80" style="width: 120px; height: 120px;" class="pic">
      <img src="https://images.unsplash.com/photo-1568480289356-5a75d0fd47fc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" style="width: 120px; height: 120px;" class="pic">
    <img src="https://images.unsplash.com/photo-1534422298391-e4f8c172dddb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" style="width: 120px; height: 120px;" class="pic">
      <img src="https://images.unsplash.com/photo-1515879218367-8466d910aaa4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" style="width: 120px; height: 120px;" class="pic">
    <img src="https://images.unsplash.com/photo-1540959733332-eab4deabeeaf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" style="width: 120px; height: 120px;" class="pic">
