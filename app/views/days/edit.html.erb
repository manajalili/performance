<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>Modify the magic day</h1>
      <%= simple_form_for(@day) do |f| %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :title %>
        <%= f.input :address %>
        <%= f.button :submit, class: "btn-main" %>
      <% end %>
      <%= link_to "Back", days_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
