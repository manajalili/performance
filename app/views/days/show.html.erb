<h6><%= @day.date %></h6>
<h6><%= @day.title %></h6>

<% @bookings.each do |booking| %>
<%= booking.activity.name %> <%= booking.duration %> hrs <%= link_to "Remove", day_path(@day), method: :delete, class: "btn-ghost" %>
<% end %>

