<div class="container px-0 my-3">
  <div class="col-8">
    <h4><strong> <%= @day.title.capitalize %></strong></h4>
    <h5><%= @day.date %></h6>
  </div>
  <div class="row border mx-1 my-3 py-2 px-2">
    <p>Activities</p>
    <% @bookings.each do |booking| %>
    <%= booking.activity.name %> <%= booking.duration %> hrs  <%= link_to "Remove", day_path(@day), method: :delete, class: "mx-3" %>
    <% end %>
  </div>

  <div class= "my-4">
    <%= link_to "Activity", new_day_booking_path(@day), class: "btn-pink" %>
    <%= link_to "Back", days_path, class: "btn btn-primary" %>
  </div>

</div>
